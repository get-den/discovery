{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["svelte", "vite/client"]
  },
  "include": [
    "src/**/*",
    "src/**/*.d.ts",
    "vite.config.*"
  ],
  "exclude": ["node_modules", "dist"]
}

